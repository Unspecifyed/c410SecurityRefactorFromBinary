{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build Program",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/calculator.cpp", // Now linking with calculator.cpp
                "-o",
                "${workspaceFolder}/output",
                "-I",
                "${workspaceFolder}",
                "-L",
                "/lib/x86_64-linux-gnu",
                "-lpthread",
                "-lssl",
                "-lcrypto"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build Test",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-g",
                "${workspaceFolder}/calculator.cpp", // Include calculator.cpp for function definitions
                "${workspaceFolder}/test/test.cpp",
                "-o",
                "${workspaceFolder}/test/test_output",
                "-I",
                "${workspaceFolder}",
                "-L",
                "/lib/x86_64-linux-gnu",
                "-lgtest",
                "-lgtest_main",
                "-lpthread",
                "-lssl",
                "-lcrypto"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "run Test",
            "type": "shell",
            "command": "${workspaceFolder}/test/test_output",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "build Test"
        }
    ]
}